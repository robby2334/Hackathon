<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    android:orientation="vertical"
    app:cardElevation="8dp"
    tools:context=".ui.DetailActivityProfile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_card_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_image_profile"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="8dp"
            android:src="@color/teal_200"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_image_profile"
            app:layout_constraintTop_toTopOf="@+id/iv_image_profile"
            tools:text="@string/text_name_profile" />

        <TextView
            android:id="@+id/tv_profession_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/tv_name_profile"
            app:layout_constraintStart_toStartOf="@+id/tv_name_profile"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_profile"
            tools:text="Android Developer" />

        <TextView
            android:id="@+id/tv_address_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/tv_name_profile"
            app:layout_constraintStart_toStartOf="@+id/tv_name_profile"
            app:layout_constraintTop_toBottomOf="@+id/tv_profession_profile"
            tools:text="Jakarta" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>